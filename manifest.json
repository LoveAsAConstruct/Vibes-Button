{
    "manifest_version": 3,
    "name": "Browser Overlay Extension",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
        "default_icon": {
            "16": "images/icon16.webp",
            "48": "images/icon48.webp",
            "128": "images/icon128.webp"
        }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["overlay.js"]
      }
    ],
    "web_accessible_resources": [
        {
            "resources": ["overlay.html", "overlay.css"],
            "matches": ["<all_urls>"]
        }
    ]
  }
  